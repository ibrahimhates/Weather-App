<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherDetails">

    <ImageView
        android:id="@+id/weatherIconDetail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-40dp"
        android:layout_marginEnd="-20dp"
        android:layout_marginBottom="-40dp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/sayfaarkaplan" />

    <TextView
        android:id="@+id/statusDetail"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginTop="10dp"
        android:text="status"
        android:textAlignment="center"
        android:textColor="#D5000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/degreeDetails" />

    <TextView
        android:id="@+id/maxDegree"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="H:10°"
        android:textAlignment="center"
        android:textColor="#D5000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/statusDetail"
        app:layout_constraintTop_toBottomOf="@+id/statusDetail" />

    <TextView
        android:id="@+id/minDegree"
        android:layout_width="64dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:text="L:10°"
        android:textAlignment="center"
        android:textColor="#D5000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/statusDetail"
        app:layout_constraintTop_toBottomOf="@+id/statusDetail" />

    <TextView
        android:id="@+id/degreeDetails"
        android:layout_width="150dp"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        android:text="30°"
        android:textAlignment="center"
        android:textColor="#BA000000"
        android:textSize="96sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/description" />

    <TextView
        android:id="@+id/degreeNıgthDetail"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginStart="-30dp"
        android:layout_marginTop="72dp"
        android:text="/30°"
        android:textAlignment="center"
        android:textColor="#BA000000"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/degreeDetails"
        app:layout_constraintStart_toEndOf="@+id/degreeDetails"
        app:layout_constraintTop_toTopOf="@+id/degreeDetails"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dayDetail"
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/abril_fatface"
        android:text="Persembe"
        android:textAlignment="center"
        android:textColor="#222222"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/humidityDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:drawableStart="@drawable/humidity"
        android:text="50"
        android:textColor="#C8000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/minDegree"
        app:layout_constraintStart_toStartOf="@+id/maxDegree"
        app:layout_constraintTop_toBottomOf="@+id/statusDetail" />

    <TextView
        android:id="@+id/dateDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="25.05.203"
        android:textColor="#222222"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Yagmurlu"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dayDetail" />

</androidx.constraintlayout.widget.ConstraintLayout>